<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <StackPanel Orientation="Vertical">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Plik">
                <MenuItem Header="_Wczytaj stan początkowy" Click="MenuItem_LoadGameState_OnClick"></MenuItem>
                <MenuItem Header="_Zapisz stan początkowy" Click="MenuItem_SaveGameState_OnClick"></MenuItem>
                <MenuItem Header="_Wyjście" Click="MenuItem_Exit_OnClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Ustawienia">
                <MenuItem Header="_Wyliczanie">
                    <MenuItem Header="_Zmień skok pokoleniowy w pojedynczej iteracji" Click="MenuItem_ChangeGenerationLeap_OnClick"/>
                </MenuItem>
                <MenuItem Header="_Plansza">
                    <MenuItem Header="_Zmień rozmiar" Click="MenuItem_ChangeBoardDimensions_OnClick"/>
                </MenuItem>
                <MenuItem Header="_Wygląd">
                    <MenuItem Header="_Dodatkowe wyróżenienia" IsCheckable="True" IsChecked="{Binding CellDistinction}"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid x:Name="BoardGrid" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Iteruj" Click="ButtonIterate_OnClick"></Button>
            <TextBlock>Rozmiar planszy:</TextBlock>
            <TextBlock Text="{Binding BoardWidth}"></TextBlock>
            <TextBlock>x</TextBlock>
            <TextBlock Text="{Binding BoardHeight}"></TextBlock>
            <TextBlock>Skok:</TextBlock>
            <TextBlock Text="{Binding GenerationLeap}"></TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
